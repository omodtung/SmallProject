<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>


<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
       
        <a href="/upload"  >UPload file</a>
    </div>
    <div>
        <div class="w3-container">
            <h2>Nodejs Using Framework Express.js</h2>

            <table class="w3-table-all w3-hoverable">

                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last name</th>
                        <th> Action</th>

                    </tr>
                </thead>
                <tbody>


                    <% for(let i=0; i < dataUser.length; i++) { %>

                        <tr>
                            <td>
                                <%= dataUser[i].id %>

                            </td>

                            <td>
                                <%= dataUser[i].fullname %>
                            </td>
                            <td>
                                <%= dataUser[i].age %>
                            </td>

                            <td>
                                <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>
                                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">

                                    <!-- <input type="text" hidden value="<%= dataUser[i].id %>" name="id" /> -->
                                    <button type="submit">Edit</button>

                                </form>
                                <!-- <button type="button">Edit</button> -->
                                <form action="/delete-user" method="POST">

                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userID" />

                                    <button type="submit">Delete</button>
                                </form>
                                <!--         
                               // <button type="button">Delete</button> -->
                            </td>
                        </tr>
                        <% } %>
                </tbody>

            </table>
        </div>

    </div>

    <div class="create-user-container">
        <form action="/create-new-user" method="POST">
            <div> creat a new user :</div>
            <div>
                <label> First Name</label>
                <input type="text" name="firstName" />

            </div>


            <div>
                <label> age</label>
                <input type="text" name="Age" />
            </div>
            <div>
                <label> Gender</label>
                <input type="text" name="Gender" />
            </div>
            <div>
                <button type="submit" class="btn-submit"> Submit </button>
            </div>
        </form>
    </div>

</body>

</html>